<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="480.0" prefWidth="640.0" style="-fx-border-color: gray; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ChallengeScreen">
   <top>
      <Pane prefHeight="80.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" layoutX="255.0" layoutY="26.0" text="Challenge" textFill="#bf0000">
               <font>
                  <Font name="Broadway" size="24.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </top>
   <center>
      <Pane prefHeight="450.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lblQuestion" alignment="CENTER" contentDisplay="CENTER" layoutX="20.0" layoutY="13.0" prefHeight="69.0" prefWidth="602.0" text="Label">
               <font>
                  <Font name="Arial Rounded MT Bold" size="36.0" />
               </font>
            </Label>
            <TextField fx:id="txtAnswer" layoutX="236.0" layoutY="102.0" prefHeight="58.0" prefWidth="174.0">
               <font>
                  <Font name="System Bold" size="26.0" />
               </font>
            </TextField>
            <Label layoutX="75.0" layoutY="114.0" text="Your Answer:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="btnCheck" layoutX="436.0" layoutY="106.0" mnemonicParsing="false" onAction="#onBtnCheckClicked" prefHeight="51.0" prefWidth="117.0" text="Check">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
            <Label fx:id="lblMessage" contentDisplay="CENTER" layoutX="130.0" layoutY="184.0" lineSpacing="2.0" prefHeight="131.0" prefWidth="484.0" text="Label" wrapText="true">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <ImageView fx:id="imgResult" fitHeight="84.0" fitWidth="84.0" layoutX="32.0" layoutY="209.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnContinue" layoutX="257.0" layoutY="332.0" mnemonicParsing="false" onAction="#onBtnContinueClicked" prefHeight="36.0" prefWidth="132.0" text="Continue">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </center>
</BorderPane>
